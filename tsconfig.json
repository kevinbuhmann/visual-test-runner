{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "newLine": "LF",
    "lib": ["es6", "es7", "dom"],
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "ignoreDefinitionFiles": true,
        "suppressWhileTypeErrorsPresent": true
      }
    ]
  },
  "include": ["./src/index.ts", "./src/visual-test-runner-cli.ts"],
  "exclude": ["*.spec.ts"]
}
